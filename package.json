{
	"name": "crypto-lab",
	"author": "Matthew Nobes",
	"description": "A cryptographic toolkit for encrypting and decrypting data for a variety of different ciphers.",
	"homepage": "https://matthewnobes.github.io/crypto-lab/",
	"version": "0.0.1",
	"repository": "https://github.com/MatthewNobes/crypto-lab",
	"scripts": {
		"start": "svelte-kit dev",
		"build": "svelte-kit build",
		"deploy": "node ./gh-pages.js",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"prepare": "svelte-kit sync",
		"check": "svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@playwright/test": "^1.21.0",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/adapter-static": "^1.0.0-next.29",
		"@sveltejs/kit": "next",
		"autoprefixer": "^10.4.7",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"postcss": "^8.4.14",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.5.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.2.6",
		"svelte-preprocess": "^4.10.7",
		"tailwindcss": "^3.1.4",
		"typescript": "~4.6.2"
	},
	"type": "module",
	"dependencies": {
		"gh-pages": "^3.2.3"
	}
}
